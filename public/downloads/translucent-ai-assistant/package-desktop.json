{
  "name": "translucent-ai-assistant",
  "version": "1.0.0",
  "description": "Translucent AI Desktop Assistant - Undetectable AI overlay for instant answers",
  "main": "public/electron.js",
  "scripts": {
    "start": "electron .",
    "build": "next build && electron-builder",
    "build:win": "next build && electron-builder --win",
    "build:mac": "next build && electron-builder --mac",
    "build:linux": "next build && electron-builder --linux",
    "dev": "next dev",
    "lint": "next lint"
  },
  "keywords": [
    "ai",
    "assistant",
    "desktop",
    "overlay",
    "translucent",
    "undetectable",
    "voice",
    "screen-watching"
  ],
  "author": "Socrani Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.socrani.translucent-assistant",
    "productName": "Translucent AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/electron.js",
      "public/preload.js",
      "public/manifest.json",
      "public/electron-is-dev.js",
      "package.json",
      ".next/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/placeholder-logo.png",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/placeholder-logo.png",
      "sign": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/placeholder-logo.png"
    }
  }
} 